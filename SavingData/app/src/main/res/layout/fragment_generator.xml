<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tech"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fragment_generator_layout"
    android:orientation="vertical"
    android:background="@drawable/tech"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:text="CREATE PROGRAM"
            android:id="@+id/generator_create_tv"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/generator_line_tv"
            android:id="@+id/generator_initiate_layout"></LinearLayout>

        <LinearLayout
            android:gravity="bottom|end"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="bottom"
                android:id="@+id/generator_line_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:text="_"
                android:textSize="16sp"/>

            </LinearLayout>





    </LinearLayout>


</LinearLayout>
</ScrollView>