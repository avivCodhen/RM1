<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    >

    <include layout="@layout/layout_bottom_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></include>

    <FrameLayout

        android:visibility="gone"
        android:id="@+id/recyclerview_exercise_drag_layout"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></View>


    </FrameLayout>

    <RelativeLayout
        android:layout_marginBottom="1dp"
        android:clickable="true"
        android:focusable="true"
        android:background="#F6F6F6"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_view_set_card"
        android:layout_width="match_parent"
        android:foreground="?attr/selectableItemBackground"
        >

       <!-- <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_color"></View>-->
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:id="@+id/exerciseView_data_linearlayout"
            android:layout_width="70dp"
            >
            <RelativeLayout
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="16dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#888888"
                    android:id="@+id/recycler_view_exercise_details_sets_tv"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="1"
                    android:textAlignment="center"
                    android:elevation="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <de.hdodenhof.circleimageview.CircleImageView

                    app:civ_circle_background_color="#F6F6F6"
                    app:civ_border_color="#CCCCCC"
                    app:civ_border_width="1dp"
                    android:src="@android:color/transparent"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/recycler_view_exercise_details_fab"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_toRightOf="@+id/exerciseView_data_linearlayout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/textview_color"

                android:layout_marginRight="12dp"
                android:id="@+id/exerciseView_repsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reps: "
                android:textSize="12sp" />

            <TextView

                android:layout_marginRight="12dp"
                android:textColor="@color/textview_color"
                android:text="Rest: "
                android:id="@+id/exerciseView_restTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />


            <TextView
                android:textColor="@color/textview_color"

                android:layout_marginRight="12dp"
                android:id="@+id/exerciseView_weightTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Wgh:"
                android:textSize="12sp" />


        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
            android:id="@+id/sets_settings"
            android:padding="12dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_more_vert_24px"
            android:layout_width="40dp"
            android:layout_height="match_parent"  />
    </RelativeLayout>


</RelativeLayout>