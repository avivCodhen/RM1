<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:padding="8dp">


    <EditText
        android:inputType="text"

        android:imeOptions="actionDone"
        android:id="@+id/recyclerview_workout_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/background_color"
        android:maxLines="1"
        android:textSize="16sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/recyclerview_workout_drag_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_drag_handle_black_24dp" />


    <ImageView
        android:visibility="gone"
        android:id="@+id/recycler_view_workouts_edit_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"

        android:layout_centerVertical="true"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@+id/recyclerview_workout_drag_iv"
        android:src="@drawable/ic_edit_black_18dp" />


    <ImageView
        android:id="@+id/recyclerview_workout_delete_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@+id/recycler_view_workouts_edit_iv"
        android:src="@drawable/ic_delete_black_24dp" />

</RelativeLayout>