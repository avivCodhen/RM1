<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create your own repettitions"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/bb_darkBackgroundColor">

    </View>

    <android.support.design.widget.TabLayout
        android:id="@+id/dialog_create_reps_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.design.widget.TabLayout>


    <com.strongest.savingdata.MyViews.MyViewPager
        android:id="@+id/dialog_create_reps_section_viewpager"
        android:layout_width="match_parent"
        android:layout_height="250dp">

    </com.strongest.savingdata.MyViews.MyViewPager>

    <Button
        android:id="@+id/dialog_create_reps"
        android:text="create"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>