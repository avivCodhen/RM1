<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="92dp"
    android:layout_gravity="right"
    android:gravity="right"
   >


    <android.support.v7.widget.CardView
        android:layout_toLeftOf="@id/exercise_menu_superset"
        android:layout_below="@id/recycler_view_exercise_menu_transfer"
        android:id="@+id/exercise_view_menu_delete"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginRight="5dp"


        >

        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"

            android:layout_height="match_parent"

            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_delete_black_24dp" />



        </LinearLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_toLeftOf="@+id/recycler_view_exercise_menu_drag"
        android:layout_below="@id/recycler_view_exercise_menu_transfer"
        android:id="@+id/exercise_menu_superset"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_add_black_18dp" />

            <TextView
                android:textSize="12sp"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Superset" />
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_alignParentRight="true"
        android:layout_below="@+id/recycler_view_exercise_menu_transfer"
        android:id="@+id/recycler_view_exercise_menu_drag"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_drag_handle_black_24dp" />
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:id="@+id/recycler_view_exercise_menu_transfer"
        android:layout_width="160dp"
        android:layout_height="41dp"
        >

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/data_transfer_24px" />

            <TextView
                android:layout_marginLeft="10dp"
                android:text="Transfer Exercise"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>