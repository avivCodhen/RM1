<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/workout_fragment_layout">
    <FrameLayout
        android:id="@+id/workout_nested_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></FrameLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/work_fragment_navigation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/workout_fragment_back_btn"
            android:text="@string/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <com.strongest.savingdata.MyViews.MyViewPager
        android:visibility="gone"
        android:id="@+id/workout_fragment_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.strongest.savingdata.MyViews.MyViewPager>
    <com.strongest.savingdata.AModels.WorkoutsModelController
        android:visibility="visible"
        android:id="@+id/fragment_workout_workoutview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.strongest.savingdata.AModels.WorkoutsModelController>

</LinearLayout>