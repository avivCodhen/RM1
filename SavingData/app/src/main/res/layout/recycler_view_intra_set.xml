<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/intra_sets_main_layout"
    >


    <FrameLayout

        android:id="@+id/recyclerview_exercise_drag_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/text_gray"></View>


    </FrameLayout>




    <RelativeLayout
        android:id="@+id/recycler_view_set_card"
        android:layout_centerVertical="true"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <LinearLayout
        android:paddingTop="0dp"
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/superset_tv"
            android:visibility="gone"
            android:layout_marginLeft="45dp"
            android:text=""
            android:textColor="@color/red"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>



        <RelativeLayout
        android:layout_below="@+id/wrapper"
        android:layout_marginBottom="1dp"

        android:gravity="center_vertical"
        android:layout_height="45dp"
        android:layout_width="match_parent"

        >

            <LinearLayout
                android:id="@+id/edit_layout"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:id="@+id/edit_container_tv"
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Tap to edit Dropset"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
            android:id="@+id/reps_rest_weight_layout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <RelativeLayout

                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_weight="1.3"
                android:layout_width="25dp"
                android:layout_height="wrap_content">

                <CheckBox

                    android:id="@+id/set_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:visibility="gone" />
            <ImageView
                android:src="@drawable/child_red"
                android:id="@+id/recycler_view_exercise_details_sets_tv"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="1"
                android:textAlignment="center"
                android:elevation="16dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            </RelativeLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_weight="0.01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/sets_reps_icon"
                    android:textColor="@color/textview_color"
                    android:src="@drawable/icon_reps_48px"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:text="Reps: "
                    android:textSize="12sp" />

                <TextView
                    android:src="@drawable/reps_color_accent_icon"
                    android:id="@+id/exerciseView_repsTV"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp" />

            </LinearLayout>


            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_weight="0.01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/sets_rest_icon"
                    android:textColor="@color/textview_color"
                    android:text="Rest: "
                    android:src="@drawable/icon_time_48px"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="50dp"
                    android:text="_"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/time_24px"
                    android:id="@+id/exerciseView_restTV"
                    android:layout_height="wrap_content"
                    android:textSize="14dp" />

            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/icon_weight_48px"
                    android:textColor="@color/textview_color"
                    android:id="@+id/sets_weight_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"

                    android:text="Wgh:"
                    android:textSize="12sp" />

                <TextView

                    android:id="@+id/exerciseView_weightTV"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="-"
                    android:textSize="14dp" />


            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="0.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/sets_delete"
                    android:padding="8dp"
                    android:src="@drawable/icon_x_gray_48"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"  />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_below="@+id/reps_rest_weight_layout"
            android:id="@+id/dropset_and_superset_layout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_marginLeft="23dp"
                android:src="@drawable/child_green"
                android:layout_width="20dp"
                android:layout_height="23dp" />

            <TextView
                android:layout_marginLeft="30dp"
                android:textColor="@color/text_gray"
                android:src="@drawable/reps_color_accent_icon"
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dropsets:"
                android:textSize="14dp" />

            <TextView
                android:textColor="@color/textview_color"
                android:src="@drawable/reps_color_accent_icon"
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Sets"
                android:textSize="12sp" />

            <TextView
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_marginRight="12dp"
                android:textColor="@color/colorRedTry"
                android:text="SUPERSET:"
                android:src="@drawable/time_24px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp" />

            <TextView
                android:visibility="gone"

                android:layout_marginRight="12dp"
                android:textColor="@color/textview_color"
                android:text="A, B"
                android:src="@drawable/time_24px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />

        </LinearLayout>



    </RelativeLayout>






    </RelativeLayout>

</RelativeLayout>