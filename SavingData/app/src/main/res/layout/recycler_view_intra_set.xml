<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:alpha="0.8"
    >

    <TextView
        android:layout_marginRight="10dp"
        android:textStyle="italic"
        android:layout_centerVertical="true"
        android:id="@+id/intra_set_tv"
        android:layout_alignParentRight="true"
        android:fontFamily="assets/varela_round_regular"
        android:textColor="#7E7E7E"
        android:textAllCaps="true"
        android:text="INTRA SET"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/intra_set_tv"
        android:paddingRight="90dp"
        android:backgroundTint="@color/colorAccent"
        android:background="@drawable/aviv_exercise_placeholder_left_margin"
        android:layout_marginLeft="40dp"
        android:gravity="center_vertical"
        android:layout_height="25dp"
        android:id="@+id/exerciseView_data_layout"
        android:layout_width="match_parent"
        app:cardCornerRadius="13dp"
        >


        <LinearLayout

            android:paddingRight="90dp"

            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:id="@+id/exerciseView_data_linearlayout"
            android:layout_width="match_parent"
            >
            <RelativeLayout
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="6dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/recycler_view_exercise_details_sets_tv"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:text="1"
                    android:textAlignment="center"
                    android:elevation="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.support.design.widget.FloatingActionButton
                    app:backgroundTint="@color/colorPrimary"
                    app:elevation="1dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/recycler_view_exercise_details_fab"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    />
            </RelativeLayout>


            <TextView
                android:textStyle="bold"

                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:id="@+id/exerciseView_repsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reps: "
                android:textSize="11sp" />

            <TextView
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"

                android:text="Rest: "
                android:layout_weight="1"
                android:id="@+id/exerciseView_restTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp" />


            <TextView
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_weight="1"
                android:id="@+id/exerciseView_weightTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Wgh:"
                android:textSize="11sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>