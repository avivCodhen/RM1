<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.AppBarLayout
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            app:theme="@style/AppToolbarwhite"
            app:elevation="10dp"
            app:navigationIcon="@drawable/cancel_48px_black"
            android:id="@+id/activity_sets_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:paddingBottom="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:transitionName="icon1"
                android:id="@+id/activity_sets_icon1"
                android:layout_marginLeft="10dp"
                android:src="@drawable/reps_color_accent_icon"
                android:layout_width="@dimen/activity_sets_icons_size"
                android:layout_height="@dimen/activity_sets_icons_size" />

            <TextView
                android:id="@+id/activity_sets_tv1"
                android:paddingLeft="20dp"
                android:layout_gravity="center"
                android:text="10-12"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout

            android:paddingBottom="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:transitionName="icon2"
                android:id="@+id/activity_sets_icon2"
                android:layout_marginLeft="10dp"
                android:src="@drawable/time_24px"
                android:layout_width="@dimen/activity_sets_icons_size"
                android:layout_height="@dimen/activity_sets_icons_size" />

            <TextView
                android:id="@+id/activity_sets_tv2"
                android:paddingLeft="20dp"
                android:layout_gravity="center"
                android:text="00:20"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout

            android:paddingBottom="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:transitionName="icon3"
                android:id="@+id/activity_sets_icon3"
                android:layout_marginLeft="10dp"
                android:src="@drawable/weight_24px_black"
                android:layout_width="@dimen/activity_sets_icons_size"
                android:layout_height="@dimen/activity_sets_icons_size" />

            <TextView
                android:id="@+id/activity_sets_tv3"
                android:paddingLeft="20dp"
                android:layout_gravity="center"
                android:text="175kg"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>





    </LinearLayout>

</LinearLayout>