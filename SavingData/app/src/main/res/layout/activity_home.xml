<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <com.strongest.savingdata.MyViews.SmartProgressBar
            android:layout_gravity="center"
            android:id="@+id/home_activity_smartprogressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.strongest.savingdata.MyViews.SmartProgressBar>



            <android.support.v7.widget.Toolbar

                app:elevation="10dp"
                android:id="@+id/activity_home_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                app:theme="@style/AppToolbarwhite"
                app:title=""
                >

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/toolbar_title"
                    android:textSize="16dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_below="@+id/activity_home_toolbar"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.design.widget.TabLayout
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    android:id="@+id/activity_home_tablayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    app:tabIndicatorColor="#5B57AB"
                    app:tabMode="scrollable"
                    app:tabIndicatorHeight="3dp"

                    app:tabSelectedTextColor="@color/colorPrimary"
                    app:tabTextColor="@color/background_color"></android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:layout_below="@+id/activity_home_tablayout"
                android:id="@+id/activity_home_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                ></android.support.v4.view.ViewPager>

        <com.strongest.savingdata.MyViews.LongClickMenu.LongClickMenuView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:elevation="12dp"
            android:alpha="0"
            android:id="@+id/activity_home_longclick_menu">

        </com.strongest.savingdata.MyViews.LongClickMenu.LongClickMenuView>


    <com.strongest.savingdata.MyViews.SmartEmptyView
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:id="@+id/home_activity_smartemptyview"
        android:layout_marginTop="50dp"
        android:layout_height="match_parent"></com.strongest.savingdata.MyViews.SmartEmptyView>

    <com.hlab.fabrevealmenu.view.FABRevealMenu
        android:id="@+id/fabMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:animateItems="true"
        app:menuBackgroundColor="@color/colorAccent"
        app:menuDirection="up"
        app:menuRes="@menu/home_activity_program_menu"
        app:menuTitleTextColor="@color/colorPrimary"
        app:showOverlay="false"
        app:showTitle="true"
        app:overlayBackground="@color/colorPrimary"
        app:menuSize="small"

        />


    <com.strongest.savingdata.MyViews.WorkoutView.ProgramToolsView
        android:id="@+id/activity_programtoolsview"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:elevation="10dp"></com.strongest.savingdata.MyViews.WorkoutView.ProgramToolsView>



    <com.strongest.savingdata.MyViews.MovableFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        app:fabSize="normal"
        android:src="@drawable/edit_48px"
        android:id="@+id/home_activity_fab"
        />


    <FrameLayout
        android:elevation="10dp"
        android:id="@+id/activity_home_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </FrameLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>

    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/layout_menu_user_header"
        android:id="@+id/home_activity_navigationview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginRight="30dp"
        android:background="@color/colorAccent"
        app:itemTextColor="@color/colorPrimary"
        android:fitsSystemWindows="true"
        app:itemIconTint="@color/colorPrimary"
        app:menu="@menu/menu_main_logged_in">

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>