<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/exercise_main_viewgroup_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <include
        layout="@layout/layout_bottom_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></include>

    <!--   <FrameLayout
        android:id="@+id/recyclerview_exercise_drag_layout"
        android:visibility="visible"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:alpha="0.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></View>

    </FrameLayout>
-->


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list_view_exercise_lay1"
        android:layout_width="wrap_content"
        android:layout_height="65dp">


        <ImageView
            android:id="@+id/exercise_edit_btn"
            style=""
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:elevation="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/icon_menu_threedots_gray_48"
            android:text="EDIT"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/drag_iv"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/order_gray_50px"
            android:visibility="gone" />


        <com.wajahatkarim3.easyflipview.EasyFlipView
            android:id="@+id/recyclerview_exercise_flipview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/drag_iv"
            app:flipOnTouch="false"



            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/recyclerview_exercise_drag_icon"

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/background_color"
                android:src="@drawable/ic_drag_handle_black_24dp"
                app:civ_circle_background_color="@color/colorPrimary" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ex1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:padding="1dp"
                android:elevation="5dp"
                app:civ_circle_background_color="@color/colorPrimary"


                />


        </com.wajahatkarim3.easyflipview.EasyFlipView>


        <TextView

            android:id="@+id/exerciseView_nameTV"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/recyclerview_exercise_flipview"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Barbell Close-Grip Bench Press"
            android:textSize="14sp" />


        <LinearLayout
            android:id="@+id/exerciseView_data_layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exerciseView_nameTV"
            android:layout_toRightOf="@+id/recyclerview_exercise_flipview">

            <TextView
                android:id="@+id/exercise_set_tv"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:text="Sets: 6"
                android:textAlignment="center"
                android:textColor="#888888"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/exerciseView_repIV"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:layout_marginRight="6dp"
                android:src="@drawable/reps_color_accent_icon"
                android:visibility="gone" />

            <TextView
                android:id="@+id/exerciseView_repsTV"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Reps: "
                android:textColor="#888888"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/exerciseView_weightIV"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:layout_marginRight="6dp"
                android:src="@drawable/weight_24px_black"
                android:text=""
                android:textSize="12sp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/exerciseView_weightTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="1080 kg"
                android:textAlignment="center"

                android:textSize="12sp"
                android:visibility="gone" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:background="@color/colorAccent"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="intra exercise"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                android:visibility="gone" />


        </LinearLayout>


        <TextView
            android:id="@+id/recycler_view_exercise_intraset_tag"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/exerciseView_data_layout2"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="Dropset"
            android:textColor="@color/colorGreenTry"
            android:textSize="12sp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/ex_comment_tv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/ex_icon_tag"
            android:layout_toRightOf="@+id/exerciseView_muscleTV"
            android:gravity="end"
            android:maxLength="20"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="#888888"
            android:textDirection="ltr"
            android:textSize="12sp"
            android:textStyle="italic"

            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_view_exercise_lay1"
        android:layout_marginLeft="110dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/add_superset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:padding="10dp"
            android:text="ADD SUPERSET"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/parent_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btns"
        android:orientation="vertical"></LinearLayout>

</RelativeLayout>
