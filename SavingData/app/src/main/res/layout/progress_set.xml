<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="center_vertical">



    <LinearLayout
        android:layout_marginBottom="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="Reps: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.strongest.savingdata.MyViews.CreateCustomBeansView.SingleNumberChooseView
        android:id="@+id/progress_set_single_choose_REP"
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"></com.strongest.savingdata.MyViews.CreateCustomBeansView.SingleNumberChooseView>


</LinearLayout>




    <LinearLayout
        android:layout_marginBottom="10dp"

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Rest: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <com.strongest.savingdata.MyViews.CreateCustomBeansView.SingleNumberChooseView
            android:id="@+id/progress_set_single_choose_REST"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"></com.strongest.savingdata.MyViews.CreateCustomBeansView.SingleNumberChooseView>

    </LinearLayout>


    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Weight: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.strongest.savingdata.MyViews.CreateCustomBeansView.SingleNumberChooseView
            android:id="@+id/progress_set_single_choose_WEIGHT"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"></com.strongest.savingdata.MyViews.CreateCustomBeansView.SingleNumberChooseView>
        <ImageView
            android:id="@+id/expand_weight"
            android:layout_marginLeft="20dp"
            android:src="@drawable/pencil"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/progress_set_keyboardexpandlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.strongest.savingdata.MyViews.WeightKeyBoard.WeightKeyboard
            android:id="@+id/progress_set_weightkeyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.strongest.savingdata.MyViews.WeightKeyBoard.WeightKeyboard>
    </net.cachapa.expandablelayout.ExpandableLayout>

</LinearLayout>