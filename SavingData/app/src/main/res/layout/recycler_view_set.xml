<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="5dp"
  >



    <include layout="@layout/layout_bottom_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></include>

    <FrameLayout

        android:id="@+id/recyclerview_exercise_drag_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/text_gray"></View>


    </FrameLayout>

    <RelativeLayout
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:layout_marginBottom="1dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_view_set_card"
        android:layout_width="match_parent"
        android:foreground="?attr/selectableItemBackground"
        >

        <!-- <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/background_color"></View>-->
        <LinearLayout
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:id="@+id/exerciseView_data_linearlayout"
            android:layout_width="50dp"
            >
            <RelativeLayout
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="16dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#888888"
                    android:id="@+id/recycler_view_exercise_details_sets_tv"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="1"
                    android:textAlignment="center"
                    android:elevation="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <de.hdodenhof.circleimageview.CircleImageView

                    app:civ_circle_background_color="#F6F6F6"
                    app:civ_border_color="#CCCCCC"
                    app:civ_border_width="1dp"
                    android:src="@android:color/transparent"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/recycler_view_exercise_details_fab"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="5dp"
            android:id="@+id/reps_rest_weight_layout"
            android:layout_toRightOf="@+id/exerciseView_data_linearlayout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/sets_reps_icon"
                android:textColor="@color/textview_color"
                android:src="@drawable/reps_color_accent_icon"
                android:layout_marginRight="12dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:text="Reps: "
                android:textSize="12sp" />

            <TextView
                android:textColor="@color/textview_color"
                android:src="@drawable/reps_color_accent_icon"
                android:layout_marginRight="12dp"
                android:id="@+id/exerciseView_repsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10-12"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/sets_rest_icon"
                android:layout_marginRight="12dp"
                android:textColor="@color/textview_color"
                android:text="Rest: "
                android:src="@drawable/time_24px"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:textSize="12sp" />

            <TextView

                android:layout_marginRight="12dp"
                android:textColor="@color/textview_color"
                android:text="00:35"
                android:src="@drawable/time_24px"
                android:id="@+id/exerciseView_restTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />


            <ImageView
                android:src="@drawable/weight_24px_black"
                android:textColor="@color/textview_color"
                android:id="@+id/sets_weight_icon"
                android:layout_marginRight="12dp"
                android:layout_width="16dp"
                android:layout_height="16dp"

                android:text="Wgh:"
                android:textSize="12sp" />

            <TextView
                android:textColor="@color/textview_color"

                android:layout_marginRight="12dp"
                android:id="@+id/exerciseView_weightTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="175 kg"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/reps_rest_weight_layout"
            android:id="@+id/dropset_and_superset_layout"
            android:layout_toRightOf="@+id/exerciseView_data_linearlayout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/colorGreenTry"
                android:src="@drawable/reps_color_accent_icon"
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DROPSET:"
                android:textSize="10sp" />

            <TextView
                android:textColor="@color/textview_color"
                android:src="@drawable/reps_color_accent_icon"
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Sets"
                android:textSize="12sp" />

            <TextView
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_marginRight="12dp"
                android:textColor="@color/colorRedTry"
                android:text="SUPERSET:"
                android:src="@drawable/time_24px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp" />

            <TextView
                android:visibility="gone"

                android:layout_marginRight="12dp"
                android:textColor="@color/textview_color"
                android:text="A, B"
                android:src="@drawable/time_24px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:alpha="0.5"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/sets_settings"
            android:background="@color/text_gray"
            android:layout_width="1dp"
            android:layout_height="20dp"></View>

        <ImageView
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/sets_settings"
            android:padding="12dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:src="@drawable/two_dots_24px_hdpi"
            android:layout_width="45dp"
            android:layout_height="35dp"  />
    </RelativeLayout>


</android.support.v7.widget.CardView>