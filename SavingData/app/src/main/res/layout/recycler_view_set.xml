<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sets_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:clickable="true"
    android:elevation="2dp"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"

    >

    <include
        layout="@layout/layout_bottom_border"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parent_view_container"></include>

    <FrameLayout

        android:id="@+id/recyclerview_exercise_drag_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/text_gray"></View>


    </FrameLayout>

    <RelativeLayout
        android:id="@+id/recycler_view_set_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <!-- <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/background_color"></View>-->

        <LinearLayout
            android:id="@+id/reps_rest_weight_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/exerciseView_data_linearlayout"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:gravity="center_horizontal">

                <CheckBox
                    android:id="@+id/set_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/recycler_view_exercise_details_sets_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:elevation="16dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sets_reps_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/icon_reps_48px"
                    android:text="Reps: "
                    android:textColor="@color/textview_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/exerciseView_repsTV"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:src="@drawable/reps_color_accent_icon"
                    android:text=""
                    android:textSize="14dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sets_rest_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/icon_time_48px"
                    android:text="Rest: "
                    android:textColor="@color/textview_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/exerciseView_restTV"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:src="@drawable/time_24px"
                    android:text=""
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sets_weight_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icon_weight_48px"
                    android:text="Wgh:"

                    android:textColor="@color/textview_color"
                    android:textSize="12sp" />

                <TextView

                    android:id="@+id/exerciseView_weightTV"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"

                    android:text=""
                    android:textSize="14dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/sets_settings"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:padding="8dp"
                    android:src="@drawable/icon_menu_threedots_gray_48"
                    android:visibility="visible" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/dropset_and_superset_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reps_rest_weight_layout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="23dp"
                android:layout_marginLeft="23dp"
                android:src="@drawable/child_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/reps_color_accent_icon"
                android:text="Dropsets:"
                android:textColor="@color/text_gray"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:src="@drawable/reps_color_accent_icon"
                android:text="2 Sets"
                android:textColor="@color/textview_color"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:src="@drawable/time_24px"
                android:text="SUPERSET:"
                android:textColor="@color/colorRedTry"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:src="@drawable/time_24px"
                android:text="A, B"
                android:textColor="@color/textview_color"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/parent_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycler_view_set_card"
        android:orientation="vertical"></LinearLayout>


</RelativeLayout>