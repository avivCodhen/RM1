<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sets_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"

    >

    <include
        layout="@layout/layout_bottom_border"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parent_view_container"></include>

    <FrameLayout

        android:id="@+id/recyclerview_exercise_drag_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/text_gray"></View>


    </FrameLayout>

    <RelativeLayout
        android:id="@+id/recycler_view_set_card"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="1dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        >


        <LinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/edit_layout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:id="@+id/edit_container_tv"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/recyclerview_exercise_flipview"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Tap to edit Set"
                android:textSize="14sp" />

        </LinearLayout>



        <LinearLayout
            android:layout_toLeftOf="@+id/options_wrapper"
            android:layout_centerVertical="true"
            android:id="@+id/reps_rest_weight_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/exerciseView_data_linearlayout"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/recycler_view_exercise_details_sets_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:elevation="16dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/sets_reps_icon"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:src="@drawable/icon_reps"
                    android:text="Reps: "
                    android:textColor="@color/textview_color"
                    android:textSize="12sp" />

                <TextView
                    android:layout_marginTop="5dp"

                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/exerciseView_repsTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/reps_color_accent_icon"
                    android:text="-"
                    android:textSize="14dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/sets_rest_icon"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:src="@drawable/icon_clock"
                    android:text="Rest: "
                    android:textColor="@color/textview_color"
                    android:textSize="12sp" />

                <TextView
                    android:elevation="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:id="@+id/exerciseView_restTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/time_24px"
                    android:text="-"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:elevation="10dp"
                    android:id="@+id/sets_weight_icon"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:src="@drawable/icon_weight"
                    android:text="Wgh:"

                    android:textColor="@color/textview_color"
                    android:textSize="12sp" />

                <TextView
                    android:layout_marginTop="5dp"

                    android:gravity="center_horizontal"
                    android:id="@+id/exerciseView_weightTV"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="14dp" />


            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/options_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/sets_settings"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:padding="8dp"
                android:src="@drawable/icon_menu_threedots_gray_48"
                android:visibility="visible" />

        </LinearLayout>



    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/recycler_view_set_card"
        android:id="@+id/parent_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>


</RelativeLayout>