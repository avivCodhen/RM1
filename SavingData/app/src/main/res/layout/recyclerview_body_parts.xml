<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/body_parts_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:focusableInTouchMode="true"

    >

    <RelativeLayout
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="14dp"
        android:paddingRight="12dp"

        android:layout_gravity="center_vertical"
        android:alpha="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/dummy"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <EditText
            android:textColor="@color/textGrayColor"
            android:enabled="false"
            android:maxLines="1"
            android:inputType="text"
            android:layout_marginLeft="10dp"
            android:clickable="false"
            android:id="@+id/recycler_view_body_parts_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F2EEF3"
            android:padding="8dp"
            android:text="Chest"
            android:textAlignment="center"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/body_view_delete"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_width="16dp"
            android:layout_height="16dp" />

        <com.wajahatkarim3.easyflipview.EasyFlipView
            app:flipOnTouch="true"
            app:flipEnabled="true"
            android:id="@+id/body_part_edit"
            android:layout_marginRight="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="16dp"
            android:layout_height="16dp">


            <ImageView
                android:alpha="0.6"

                android:background="@color/background_color"
                android:src="@drawable/checkmark_black_24px"
                android:layout_width="16dp"
                android:layout_height="16dp" />

            <ImageView
                android:alpha="0.6"

                android:background="@color/background_color"
                android:src="@drawable/ic_edit_black_18dp"
                android:layout_width="16dp"
                android:layout_height="16dp" />


        </com.wajahatkarim3.easyflipview.EasyFlipView>

        <View
            android:textColor="@color/colorPrimaryDark"
            android:alpha="0.6"

            android:layout_marginLeft="18dp"
            android:layout_below="@+id/recycler_view_body_parts_TV"
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"></View>

    </RelativeLayout>


</LinearLayout>