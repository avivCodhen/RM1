<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.strongest.savingdata.MyViews.LongClickMenu.LongClickMenuView
        android:background="@color/colorAccent"
        android:id="@+id/fragment_details_longclick"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:alpha="0"
        android:visibility="gone"
        android:elevation="1dp"

        />


    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <android.support.design.widget.AppBarLayout
            android:background="@color/colorAccent"
            android:id="@+id/activity_exercise_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >



            <android.support.design.widget.CollapsingToolbarLayout

                app:contentScrim="?attr/colorAccent"
                android:id="@+id/activity_exercise_collapsingtoolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:foregroundGravity="bottom|right"
                android:foregroundTintMode="add"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">



                <android.support.v7.widget.Toolbar
                    android:background="@color/colorAccent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:elevation="1dp"
                    app:theme="@style/AppToolbarwhite"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:layout_collapseMode="pin"
                    android:id="@+id/exercise_details_activity_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="52dp">

                    <RelativeLayout
                        android:background="@color/colorAccent"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:id="@+id/textview_title"
                            android:textSize="16dp"
                            android:text="Bench Press hah"
                            android:layout_width="250dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_height="wrap_content" />


                        <ImageView

                            android:layout_alignParentRight="true"
                            app:layout_collapseMode="pin"
                            android:padding="10dp"
                            android:src="@drawable/plus_48px"
                            android:id="@+id/toolbar_add_set_btn"
                            android:backgroundTint="@color/colorRedTry"
                            android:text="add set"
                            android:elevation="10dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"

                            />

                    </RelativeLayout>




                </android.support.v7.widget.Toolbar>



                <RelativeLayout
                    android:background="@color/colorAccent"

                    android:layout_marginBottom="20dp"
                    android:id="@+id/collapse_container"
                    app:layout_collapseMode="parallax"
                    android:layout_marginTop="52dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">




                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        app:layout_behavior="com.strongest.savingdata.Utils.ImageBehavior"
                        android:elevation="10dp"
                        android:layout_marginTop="8dp"
                        android:id="@+id/testIv"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="10dp"
                        />

                    <include layout="@layout/layout_exercise_stats"
                        app:layout_collapseMode="parallax"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="match_parent"
                        android:id="@+id/stats"
                        android:layout_marginBottom="50dp"
                        android:layout_toRightOf="@+id/testIv"
                        >
                    </include>


                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="-40dp"
                        android:layout_marginBottom="25dp"
                        android:id="@+id/fragment_details_recycler_exercises"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/stats"></android.support.v7.widget.RecyclerView>


                    <FrameLayout
                        android:visibility="gone"
                        android:layout_below="@+id/fragment_details_recycler_exercises"
                        android:id="@+id/youtube_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"></FrameLayout>


                </RelativeLayout>



            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>


        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:behavior_overlapTop="30dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/divider_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:visibility="gone"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:text="SETS"
                        android:textColor="@color/text_gray"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <!-- <net.cachapa.expandablelayout.ExpandableLayout

                     android:id="@+id/youtube_expand_layout"
                     app:el_expanded="false"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">

                                         <FrameLayout
                                             android:layout_marginTop="10dp"
                                             android:layout_marginBottom="20dp"
                                             android:id="@+id/youtube_fragment"
                                             android:layout_width="match_parent"
                                             android:layout_height="200dp"></FrameLayout>

                 </net.cachapa.expandablelayout.ExpandableLayout>
 -->
                <android.support.v7.widget.RecyclerView
                    android:layout_marginBottom="40dp"
                    android:layout_below="@+id/divider_wrapper"
                    android:id="@+id/details_fragment_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:id="@+id/btn_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <android.support.design.widget.FloatingActionButton
                        android:src="@drawable/ic_add_white_24dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/add_set_btn"
                        app:backgroundTint="@color/colorRedTry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />

                </LinearLayout>


            </RelativeLayout>


        </android.support.v4.widget.NestedScrollView>

        <!--    <android.support.design.widget.FloatingActionButton
                android:id="@+id/play_fav"
                android:layout_margin="15dp"
                app:fabSize="mini"
                android:src="@drawable/ic_add_white_24dp"
                app:backgroundTint="@color/colorRedTry"
                android:layout_width="wrap_content"
                app:layout_anchor="@id/activity_exercise_app_bar"
                app:layout_anchorGravity="bottom|right"
                android:layout_height="wrap_content" />-->


    </android.support.design.widget.CoordinatorLayout>



    <FrameLayout
        android:id="@+id/sets_details_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>



</RelativeLayout>