<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:background="@color/colorAccent"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"

            android:textColor="@color/colorPrimary"
            android:padding="6dp"
            android:text="Repetitions"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <Button
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/aviv_program_menu_button"
            android:id="@+id/choose_sets_reps_apply"
            android:layout_marginRight="10dp"
            android:buttonTint="@color/colorPrimary"
            android:text="Apply to all sets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <com.strongest.savingdata.MyViews.CreateCustomBeansView.RangeNumberChooseView
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:id="@+id/fragment_sets_choose_rangenumberview"
        android:layout_height="wrap_content"></com.strongest.savingdata.MyViews.CreateCustomBeansView.RangeNumberChooseView>

    <TextView
        android:layout_marginLeft="8dp"
        android:text="Repetitions Used"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:layout_margin="8dp"
        android:id="@+id/fragment_sets_choose_recycler_repetitions"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorAccent"
            android:padding="6dp"
            android:text="Rest"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />
        <Button
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/aviv_program_menu_button"
            android:id="@+id/choose_sets_rest_apply"
            android:layout_marginRight="10dp"
            android:buttonTint="@color/colorPrimary"
            android:text="Apply to all sets"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <com.strongest.savingdata.MyViews.RestChooseView
        android:layout_width="match_parent"
        android:id="@+id/sets_choose_restchooseview"
        android:layout_height="wrap_content"></com.strongest.savingdata.MyViews.RestChooseView>

    <android.support.v7.widget.RecyclerView
        android:layout_margin="8dp"
        android:layout_marginTop="10dp"
        android:id="@+id/fragment_sets_choose_recycler_rest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:background="@color/colorAccent"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"

            android:textColor="@color/colorPrimary"
            android:padding="6dp"
            android:text="Weight"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <Button
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/aviv_program_menu_button"
            android:id="@+id/choose_sets_weight_apply"
            android:layout_marginRight="10dp"
            android:buttonTint="@color/colorPrimary"
            android:text="Apply to all sets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:layout_weight="0.3"
            android:text="% of rm1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="number"
            android:enabled="false"
            android:layout_marginRight="10dp"
            android:layout_weight="1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:enabled="false"
            android:layout_weight="1"

            android:text="Calculate % of rm1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/choose_sets_customweight"
            android:layout_marginRight="10dp"
            android:text="Custom Weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/choose_sets_weight_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:gravity="center"
                android:id="@+id/choose_sets_weight_et"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="125.5"
                android:inputType="numberDecimal"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/choose_sets_keyboard_iv"
                android:layout_marginLeft="80dp"
                android:saveEnabled="false"
                android:elevation="10dp"
                android:layout_weight="1"
                android:src="@drawable/keyboard_24px"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
</ScrollView>