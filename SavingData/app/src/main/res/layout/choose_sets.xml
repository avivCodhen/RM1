<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/layout_bottom_border"></include>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="44dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="Repetitions"
                android:textColor="#888888"
                android:textStyle="bold" />
            <TextSwitcher
                android:id="@+id/sets_current_reps"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="-"
                android:textColor="#888888"
                android:textStyle="bold" />


            <Button
                android:id="@+id/choose_sets_reps_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:buttonTint="@color/colorPrimary"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Apply to all sets"
                android:textColor="@color/colorAccent" />

        </LinearLayout>


        <include layout="@layout/layout_bottom_border"></include>

        <com.strongest.savingdata.MyViews.CreateCustomBeansView.RangeNumberChooseView
            android:id="@+id/fragment_sets_choose_rangenumberview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"></com.strongest.savingdata.MyViews.CreateCustomBeansView.RangeNumberChooseView>

        <include layout="@layout/layout_bottom_border"></include>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:text="Repetitions Used"
            android:textColor="@color/text_gray"
            android:textSize="12sp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_sets_choose_recycler_repetitions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        <include layout="@layout/layout_bottom_border"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="Rest"
                android:textColor="#888888"
                android:textStyle="bold" />

            <TextSwitcher
                android:id="@+id/sets_current_rest"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="-"
                android:textColor="#888888"
                android:textStyle="bold" />

            <Button
                android:id="@+id/choose_sets_rest_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/aviv_program_menu_button"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"

                android:text="Apply to all sets"
                android:textColor="@color/colorAccent" />


        </LinearLayout>

        <include layout="@layout/layout_bottom_border"></include>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:text="Minutes:"
                android:textColor="@color/text_gray"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Seconds:"
                android:textAlignment="center"
                android:textColor="@color/text_gray"
                android:textSize="12sp" />


        </LinearLayout>

        <include layout="@layout/layout_bottom_border"></include>

        <com.strongest.savingdata.MyViews.RestChooseView
            android:id="@+id/sets_choose_restchooseview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"></com.strongest.savingdata.MyViews.RestChooseView>

        <include layout="@layout/layout_bottom_border"></include>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:text="Rest Used"
            android:textColor="@color/text_gray"
            android:textSize="12sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_sets_choose_recycler_rest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        <include layout="@layout/layout_bottom_border"></include>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="44dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="Weight"
                android:textColor="#888888"
                android:textStyle="bold" />

            <TextSwitcher
                android:id="@+id/sets_current_weight"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="-"
                android:textColor="#888888"
                android:textStyle="bold" />
            <Button
                android:id="@+id/choose_sets_weight_apply"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/aviv_program_menu_button"
                android:buttonTint="@color/colorPrimary"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Apply to all sets"
                android:textColor="@color/colorAccent" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="% of rm1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"

                android:enabled="false"
                android:inputType="number" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:enabled="false"
                android:text="Calculate % of rm1" />

        </LinearLayout>

        <include layout="@layout/layout_bottom_border"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sets_choose_textview_size"
            android:background="@color/light_background_color"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/choose_sets_customweight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="Custom Weight"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />

            <FrameLayout
                android:id="@+id/choose_sets_weight_layout"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <EditText
                    android:id="@+id/choose_sets_weight_et"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="125.5"
                    android:textSize="12sp" />


                <ImageView
                    android:id="@+id/choose_sets_keyboard_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="80dp"
                    android:elevation="10dp"
                    android:saveEnabled="false"
                    android:src="@drawable/keyboard_24px"
                    android:visibility="gone" />

            </FrameLayout>

            <include
                layout="@layout/layout_right_border"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/choose_sets_weight_layout"></include>
        </RelativeLayout>

        <include layout="@layout/layout_bottom_border"></include>
    </LinearLayout>
</ScrollView>