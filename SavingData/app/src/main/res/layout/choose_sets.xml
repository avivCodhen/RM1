<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <com.strongest.savingdata.MyViews.SaveExitToolBar
        android:id="@+id/set_edit_saveExitToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.strongest.savingdata.MyViews.SaveExitToolBar>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="54dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/sets_icons_size"
                    android:layout_height="@dimen/sets_icons_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_reps" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Repetitions"
                    android:textColor="#888888"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_marginRight="10dp"

                    android:id="@+id/choose_sets_reps_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/choose_sets_rep_tv"
                        android:textColor="@color/colorAccent"
                        android:layout_width="@dimen/edittext_width"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_toLeftOf="@+id/choose_sets_reps_cb"
                        android:gravity="center"
                        android:text="10"
                        android:inputType="number"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/choose_sets_reps_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/choose_sets_reps_range_et"
                        android:text="To" />

                    <TextView
                        android:textColor="@color/colorAccent"

                        android:id="@+id/choose_sets_reps_range_et"
                        android:layout_width="@dimen/edittext_width"

                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:gravity="center"
                        android:text="10"
                        android:inputType="number"
                        android:textSize="12sp" />


                </RelativeLayout>


            </LinearLayout>


            <include layout="@layout/layout_bottom_border"></include>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/sets_icons_size"
                    android:layout_height="@dimen/sets_icons_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_clock" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Rest"
                    android:textColor="#888888"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:layout_marginRight="10dp"

                    android:id="@+id/choose_sets_rest_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"
                        android:id="@+id/choose_sets_rest_min_tv"
                        android:layout_width="@dimen/edittext_width"

                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_marginRight="45dp"
                        android:layout_toLeftOf="@+id/choose_sets_rest_sec_tv"
                        android:gravity="center"
                        android:hint="min"
                        android:inputType="number"
                        android:textSize="12sp" />

                    <TextView
                        android:textColor="@color/colorAccent"
                        android:id="@+id/choose_sets_rest_sec_tv"
                        android:layout_width="@dimen/edittext_width"

                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:gravity="center"
                        android:hint="sec"
                        android:textColorHint="@color/colorAccent"
                        android:inputType="number"
                        android:textSize="12sp" />


                </RelativeLayout>


            </LinearLayout>

            <include layout="@layout/layout_bottom_border"></include>


            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="54dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/sets_icons_size"
                    android:layout_height="@dimen/sets_icons_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_weight" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Weight"
                    android:textColor="#888888"
                    android:textStyle="bold" />


                <FrameLayout
                    android:layout_marginRight="10dp"
                    android:id="@+id/choose_sets_weight_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="end">

                    <EditText
                        android:imeOptions="actionDone"
                        android:textColor="@color/colorAccent"
                        android:id="@+id/choose_sets_weight_tv"
                        android:layout_width="@dimen/edittext_width"

                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:text="0.0"
                        android:maxLength="6"
                        android:textSize="12sp" />


                </FrameLayout>


            </LinearLayout>

            <include layout="@layout/layout_weightkeyboard2"
                android:visibility="gone"></include>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="44dp"
                android:background="@color/colorAccent"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Recent Repetition Settings Used"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />



            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:layout_weight="1"
                    android:id="@+id/fragment_sets_choose_recycler_repetitions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="44dp"
                    android:background="@color/colorAccent"
                    android:orientation="horizontal">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Recent Rest Settings Used"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />



                </LinearLayout>



                <android.support.v7.widget.RecyclerView
                    android:layout_weight="1"
                    android:id="@+id/fragment_sets_choose_recycler_rest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

                <include layout="@layout/layout_bottom_border"></include>

<FrameLayout
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button

        android:id="@+id/apply_settings_for_allsets_btn"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorAccent"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="APPLY SETTINGS TO ALL THE SETS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</FrameLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
