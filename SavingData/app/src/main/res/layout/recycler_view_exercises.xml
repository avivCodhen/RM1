<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_view_exercise_lay1"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    >

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/exerciseView_muscleTV"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="32dp"
        android:fontFamily="assets/varela_round_regular"
        android:gravity="top"
        android:rotation="-90"
        android:text="chest"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="8sp" />


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/exerciseView_layout"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:background="@drawable/aviv_exercise_placeholder"
        app:cardElevation="4dp"
        android:layout_marginTop="5dp"
        >

        />/ android:background="#F3F3F3"

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/strongest_selected_buttons">


            <!--<ImageView
                 android:id="@+id/ex1"
                 android:layout_width="@dimen/exercise_view_size"
                 android:layout_height="@dimen/exercise_size_height"
                 android:background="@drawable/buttons_default_not_highlight"
                  />-->

            <ImageView
                android:id="@+id/ex_arrow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignBottom="@+id/exerciseView_nameTV"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/exerciseView_nameTV"
                android:layout_toRightOf="@+id/exerciseView_nameTV"
                android:background="@drawable/collapse_arrow_24px" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ex1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/muscle_legs"

                />


            <ImageView
                android:id="@+id/ex_choose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/exerciseView_nameTV"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/ex_arrow"
                android:layout_toStartOf="@+id/ex_arrow"
                android:background="@android:drawable/ic_menu_edit"
                android:visibility="gone" />

            <TextView
                android:id="@+id/exerciseView_nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="14dp"
                android:text="Barbell Bench Press"
                android:textColor="#2FCBC0"
                android:textSize="15sp"
                android:textStyle="bold"

                />

            <LinearLayout
                android:id="@+id/exerciseView_data_layout"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="37dp">

                <TextView
                    android:id="@+id/exerciseView_setsTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:text="Sets: "
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/exerciseView_repsTV"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:text="Reps: "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/exerciseView_restTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:text="Rest: "
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/exerciseView_weightTV"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"

                    android:text="Wgh: "
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>

