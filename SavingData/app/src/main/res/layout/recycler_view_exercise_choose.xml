<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:padding="5dp">

    <TextView
        android:textSize="12sp"
        android:layout_marginRight="15dp"
        android:id="@+id/exercise_tv"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="Barbell Bench Press" />

    <TextView
        android:textSize="12sp"
        android:layout_toRightOf="@+id/exercise_tv"
        android:id="@+id/exercise_muscles_tv"
        android:layout_marginRight="10dp"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:text="Quadriceps, Hamstring, Lower Back, Abs, Calfs" />

    <android.support.v7.widget.CardView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/choose_type"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Compound"
             />

    </android.support.v7.widget.CardView>

</RelativeLayout>
