<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="2dp">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="@android:color/background_light"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></RelativeLayout>
    <TextView
        android:layout_marginTop="2dp"
        android:layout_below="@+id/exercise_choose_exercise_tag"
        android:textSize="12sp"
        android:layout_marginRight="15dp"
        android:id="@+id/exercise_tv"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Barbell Bench Press" />

    <TextView

        android:layout_toRightOf="@id/choose_type"
        android:layout_below="@id/exercise_choose_rm1_tag"
        android:id="@+id/exercise_choose_rm1"
        android:layout_marginTop="2dp"
        android:text="123 kg "
        android:textSize="12sp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
         />

    <ImageView
        android:layout_centerVertical="true"
        android:alpha="0.5"
        android:layout_alignParentRight="true"
        android:src="@drawable/info_24px_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/exercise_choose_rm1"
        android:layout_below="@+id/exercise_choose_rm1_tag"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:background="@color/colorAccent"
        android:textSize="10dp"
        android:text="set"
        android:textStyle="bold"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="2dp"
        android:layout_below="@+id/exercise_choose_type_tag"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/exercise_tv"
        android:id="@+id/choose_type"
        android:layout_marginRight="10dp"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Compound"
        />

    <TextView
        android:id="@+id/exercise_muscles_tv"

        android:layout_marginTop="2dp"
        android:layout_below="@+id/exercise_choose_muscles_tag"
        android:textSize="12sp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:text="Quadriceps, Hamstring, Lower Back, Abs, Calfs"
        android:layout_alignParentRight="true"/>



    <RelativeLayout
        android:layout_toRightOf="@+id/choose_type"
        android:id="@+id/exercise_choose_rm1_tag"
        android:background="@color/background_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"

            android:text="rm1"
            />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/exercise_choose_exercise_tag"
        android:background="@color/background_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:textStyle="bold"

            android:layout_height="wrap_content"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:text="Exercise"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_toRightOf="@+id/exercise_tv"
        android:id="@+id/exercise_choose_type_tag"
        android:background="@color/background_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:textStyle="bold"

            android:layout_height="wrap_content"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:text="Type"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_below="@id/exercise_tv"
        android:id="@+id/exercise_choose_muscles_tag"
        android:background="@color/background_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:paddingBottom="1dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="1dp"
            android:text="Muscles Invovled"
            android:textSize="10sp"
            android:textStyle="bold" />

    </RelativeLayout>


</RelativeLayout>
</android.support.v7.widget.CardView>
