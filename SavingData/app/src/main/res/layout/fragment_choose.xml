<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/choose_dialog_fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    >

    <RelativeLayout

        android:id="@+id/choose_fragment_actiobar_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorAccent"
        >

        <ImageView
            android:id="@+id/fragment_choose_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:src="@drawable/back_arrow_24px" />

        <TextView
            android:id="@+id/choose_add_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/fragment_choose_back_iv"
            android:elevation="10dp"
            android:padding="5dp"
            android:text="Add Set"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

    </RelativeLayout>



            <android.support.v7.widget.RecyclerView
                android:background="@color/background_color"
                android:layout_below="@+id/choose_fragment_actiobar_layout"
                android:id="@+id/fragment_choose_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>



        <android.support.v4.view.ViewPager
            android:clipToPadding="true"
            android:layout_below="@+id/fragment_choose_recyclerview"
            android:id="@+id/choose_dialog_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_color"></android.support.v4.view.ViewPager>


</RelativeLayout>
