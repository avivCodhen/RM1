<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/routine_child_listView_desTV1"/>

    <TextView
        android:layout_below="@id/routine_child_listView_desTV1"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/routine_child_listView_desTV2"/>
    <Button
        android:id="@+id/routine_child_btnNo"
        android:layout_alignParentRight="true"
        android:layout_below="@id/routine_child_listView_desTV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/routine_details_no"
        android:background="@android:color/transparent"/>
    <Button
        android:id="@+id/routine_child_btnYes"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/routine_child_btnNo"
        android:layout_below="@id/routine_child_listView_desTV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/routine_detail_yes"
        android:background="@android:color/transparent"/>

</RelativeLayout>