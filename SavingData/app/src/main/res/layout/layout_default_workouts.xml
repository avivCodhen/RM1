<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_below="@+id/new_program_frag_saveexittoolbar"
        android:id="@+id/fragment_new_program_default_blank_template"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="300px"
            android:layout_height="200px"></android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/programNameTv"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="35dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>