<RelativeLayout android:layout_height="match_parent"
    android:clipToPadding="true"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/layout_bottom_border"></include>

  <include layout="@layout/recycler_view_muscle"
      android:id="@+id/choose_muscle_include"

      android:layout_height="wrap_content"
      android:layout_width="wrap_content"></include>


    <TextView
        android:layout_margin="10dp"

        android:padding="10dp"
        android:id="@+id/choose_change_user_tv"
        android:textColor="@color/colorAccent"
        android:layout_alignParentRight="true"
        android:textStyle="italic"
        android:gravity="center_vertical"
        android:textSize="10dp"
        android:text="My Exercises"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="10dp"
        android:padding="10dp"
        android:id="@+id/choose_change_Tv"
        android:textColor="@color/colorAccent"
        android:textStyle="italic"
        android:gravity="center_vertical"
        android:textSize="10dp"
        android:text="Change"
        android:layout_toLeftOf="@+id/choose_change_user_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include layout="@layout/layout_bottom_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_selector_exercise_expand_layout"></include>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_below="@+id/choose_muscle_include"
        android:id="@+id/my_selector_exercise_expand_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <net.cachapa.expandablelayout.ExpandableLayout
            app:el_duration="500"
            app:el_expanded="false"
            android:layout_above="@+id/exercise_choose_weight_layout"
            android:id="@+id/expandable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:el_parallax="1">

                <GridView
                    android:background="@android:color/transparent"
                    android:stretchMode="columnWidth"
                    android:numColumns="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/fragment_choose_exercise_gridview"></GridView>
        </net.cachapa.expandablelayout.ExpandableLayout>



    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="1dp"
        android:clipToPadding="true"
        android:layout_below="@id/my_selector_exercise_expand_layout"
        android:layout_above="@+id/exercise_choose_weight_layout"
        android:id="@+id/choose_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/exercise_choose_weight_layout"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/choose_exercise_comment_cb"
            android:layout_marginRight="10dp"
            android:text="Comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/choose_sets_weight_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:maxLength="20"
                android:id="@+id/choose_exercise_comment_et"
                android:layout_weight="1"
                android:textSize="12sp"
                android:hint="20 Characters limit."
                android:text=""
                android:inputType="text"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

    </LinearLayout>


</RelativeLayout>

