<RelativeLayout android:layout_height="match_parent"
    android:clipToPadding="true"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <com.strongest.savingdata.MyViews.SaveExitToolBar

        android:layout_alignParentTop="true"
        android:id="@+id/exercise_edit_fragment_saveExitToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.strongest.savingdata.MyViews.SaveExitToolBar>


    <com.arlib.floatingsearchview.FloatingSearchView
        android:elevation="1dp"
        android:layout_below="@+id/exercise_edit_fragment_saveExitToolbar"
        android:background="@color/colorRedTry"
        android:id="@+id/exercise_choose_search_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:floatingSearch_searchHint="Search Exercise..."
        app:floatingSearch_suggestionsListAnimDuration="250"
        app:floatingSearch_showSearchKey="false"
        app:floatingSearch_leftActionMode="showSearch"
        app:floatingSearch_close_search_on_keyboard_dismiss="true"/>


    <RelativeLayout
        android:layout_marginTop="50dp"
        android:id="@+id/layout_youtube_search"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <net.cachapa.expandablelayout.ExpandableLayout
            app:el_expanded="true"
            android:background="@color/colorAccent"
            android:id="@+id/youtube_player_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <FrameLayout
                android:visibility="invisible"
                android:layout_marginTop="55dp"
                android:id="@+id/youtube_fragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"></FrameLayout>
            <RelativeLayout
                android:id="@+id/no_exercise_wrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginBottom="30dp"
                    android:textColor="@color/colorPrimary"
                    android:elevation="5dp"
                    android:id="@+id/youtube_textview_hiddner"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="100dp"
                    android:text="Pick a muscle and Choose an exercise to play a video."
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_below="@+id/youtube_textview_hiddner"
                    android:text="PICK MUSCLE"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/change_btn"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/colorAccent"
                    android:padding="8dp"
                    android:elevation="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


        </net.cachapa.expandablelayout.ExpandableLayout>


    </RelativeLayout>

<RelativeLayout
    android:elevation="1.5dp"
    android:background="@color/background_color"
    android:id="@+id/exercise_layout"
    android:layout_below="@+id/layout_youtube_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:id="@+id/recycler_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:visibility="gone"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:text="Anterior Shoulders"
            android:textColor="@color/colorPrimary"
            android:id="@+id/_choose_exercise_muscle_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="-50dp"
                android:id="@+id/choose_exercise_muscle_icon"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp" />


            <TextView
                android:layout_weight="1"

                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/youtube_fragment"
                android:layout_marginLeft="15dp"
                android:id="@+id/choose_change_Tv"
                android:textSize="12dp"
                android:text="Change"
                android:layout_toLeftOf="@+id/choose_change_user_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/sort_down_white_96dp"
                android:id="@+id/edit_exercise_arrow_iv"
                android:layout_width="25dp"
                android:layout_marginLeft="-30dp"
                android:layout_height="25dp" />

            <TextView
                android:layout_weight="1"

                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                style="@style/Base.Widget.AppCompat.Button.Small"
                android:layout_below="@+id/youtube_fragment"

                android:id="@+id/choose_change_user_tv"
                android:layout_alignParentRight="true"
                android:textSize="12dp"
                android:text="My Exercises"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


        </LinearLayout>


