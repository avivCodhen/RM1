    </LinearLayout>

       <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_below="@+id/recycler_menu"
        android:id="@+id/my_selector_exercise_expand_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <net.cachapa.expandablelayout.ExpandableLayout
            app:el_duration="500"
            app:el_expanded="false"
            android:layout_above="@+id/exercise_choose_weight_layout"
            android:id="@+id/expandable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:el_parallax="1">

            <include layout="@layout/layout_bottom_border"></include>
            <GridView
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:stretchMode="columnWidth"
                android:numColumns="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment_choose_exercise_gridview"></GridView>
        </net.cachapa.expandablelayout.ExpandableLayout>



    </LinearLayout>



    <com.strongest.savingdata.MyViews.SmartEmptyView
        android:layout_marginTop="1dp"
        android:id="@+id/my_exercise_smart_empty_view"
        android:layout_below="@id/my_selector_exercise_expand_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.strongest.savingdata.MyViews.SmartEmptyView>

    <android.support.v7.widget.RecyclerView
        android:background="@color/colorPrimary"
        android:layout_marginTop="1dp"
        android:clipToPadding="true"
        android:layout_below="@id/my_selector_exercise_expand_layout"
        android:id="@+id/choose_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

