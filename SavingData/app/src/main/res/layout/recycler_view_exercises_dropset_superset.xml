<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_view_exercise_lay1"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    >
    <TextView
        android:id="@+id/exerciseView_methodTV"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="@color/colorPrimary"
        android:padding="3dp"
        android:background="@color/color_legs"
        android:elevation="10dp"
        android:text="DROPSET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/exerciseView_muscleTV"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="14dp"
        android:fontFamily="assets/varela_round_regular"
        android:gravity="top"
        android:rotation="-90"
        android:text="anterior shoulders"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#7E7E7E"
        android:textSize="8sp"
        />


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/exerciseView_layout"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:cardElevation="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/aviv_exercise_placeholder_left_margin"
            >


            <!--<ImageView
                 android:id="@+id/ex1"
                 android:layout_width="@dimen/exercise_view_size"
                 android:layout_height="@dimen/exercise_size_height"
                 android:background="@drawable/buttons_default_not_highlight"
                  />-->

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/ex_arrow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/exerciseView_nameTV"
                android:layout_toRightOf="@+id/exerciseView_nameTV"
                android:background="@drawable/expand_arrow_grey_24px" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ex1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/exercise_image_left_margin"
                android:layout_marginTop="12dp"
                android:src="@drawable/muscle_legs"

                />


            <ImageView
                android:id="@+id/ex_choose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/exerciseView_nameTV"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/ex_arrow"
                android:layout_toStartOf="@+id/ex_arrow"
                android:background="@android:drawable/ic_menu_edit"
                android:visibility="gone" />

            <TextView
                android:id="@+id/exerciseView_nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:text="Barbell Bench Press"
                android:textColor="#2FCBC0"
                android:textSize="15sp"
                android:textStyle="bold"

                />

            <LinearLayout
                android:id="@+id/exerciseView_data_layout"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="33dp">

                <TextView
                    android:id="@+id/exerciseView_setsTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:text="Sets: 3"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/exerciseView_repsTV"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:text="Reps: "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/exerciseView_restTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:text="Rest: "
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/exerciseView_weightTV"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"

                    android:text="Wgh: "
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>

