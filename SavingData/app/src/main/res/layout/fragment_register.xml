<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:elevation="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.strongest.savingdata.MyViews.SaveExitToolBar
        android:id="@+id/saveExitToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.strongest.savingdata.MyViews.SaveExitToolBar>
    <EditText
        android:id="@+id/register_fragment_emailED"
        android:layout_gravity="center"
        android:hint="email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/register_fragment_passwordED"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:hint="password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/register_fragment_confirmED"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:hint="confirm password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button

        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="register"
        android:id="@+id/register_fragment_registernBtn"
        android:text="REGISTER"
        android:layout_width="300dp"
        android:background="@color/colorAccent"
        android:layout_height="50dp"
        android:gravity="center"
        />


</LinearLayout>