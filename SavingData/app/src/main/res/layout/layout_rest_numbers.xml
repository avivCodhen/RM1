<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:text="Minutes:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:textAlignment="center"

            android:layout_weight="1"
            android:text="Seconds:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <LinearLayout
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

       <com.strongest.savingdata.MyViews.CreateCustomBeansView.SingleNumberChooseView
           android:layout_width="wrap_content"
           android:layout_marginRight="20dp"
           android:layout_marginTop="8dp"
           android:id="@+id/rest_single_number_choose"
           android:layout_height="wrap_content"></com.strongest.savingdata.MyViews.CreateCustomBeansView.SingleNumberChooseView>
        <TextView
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:id="@+id/rest_minus_5_tv"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:background="@drawable/strongest_selected_buttons"
            android:backgroundTint="#fff"
            android:text="-5"
            android:textSize="15sp" />
        <TextView
            android:layout_marginRight="5dp"
            android:id="@+id/rest_minus_10_tv"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:background="@drawable/strongest_selected_buttons"
            android:backgroundTint="#fff"
            android:text="-10"
            android:gravity="center"

            android:textSize="15sp" />
        <EditText
            android:gravity="center"

            android:enabled="false"
            android:id="@+id/rest_seconds"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="13sp" />

        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/rest_plus_5"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:background="@drawable/strongest_selected_buttons"
            android:backgroundTint="#fff"
            android:text="+5"
            android:gravity="center"

            android:textSize="15sp" />
        <TextView
            android:id="@+id/rest_plus_10"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:background="@drawable/strongest_selected_buttons"
            android:backgroundTint="#fff"
            android:text="+10"
            android:textAlignment="center"
            android:textSize="15sp" />


    </LinearLayout>
</LinearLayout>