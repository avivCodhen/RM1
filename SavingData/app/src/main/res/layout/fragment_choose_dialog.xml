<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/choose_dialog_fragment_layout"
    android:background="@android:color/transparent">
    <Button
        android:visibility="gone"
        android:transitionName="avivtransitionfuckyou"
        android:id="@+id/choose_back_btn"
        android:background="@android:color/transparent"
        android:text="X"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="gone"
        android:transitionName="fuckingwork"
        android:id="@+id/choose_test_tv"
        android:textSize="16dp"
        android:text="Barbelll Exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TabLayout
        android:id="@+id/choose_dialog_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.design.widget.TabLayout>
    <com.strongest.savingdata.MyViews.MyViewPager
        android:id="@+id/choose_dialog_viewpager"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.strongest.savingdata.MyViews.MyViewPager>

    <android.support.design.widget.FloatingActionButton

        android:visibility="gone"
        android:id="@+id/choose_floating_button_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:src="@drawable/ic_done_white_24dp"
        app:backgroundTint="#00ADD3" />

</LinearLayout>
