<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/colorPrimary"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView

            android:id="@+id/program_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/program_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/textGrayColor"
            android:textSize="14dp" />

        <TextView

            android:id="@+id/program_creator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/textColor"
            android:textSize="14dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_weight="1"
                android:id="@+id/load_program_btn"
                style="@style/Base.TextAppearance.AppCompat.Widget.Button"
                android:text="LOAD PROGRAM"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textAllCaps="false"
                android:layout_weight="1"
                android:id="@+id/current_program_tv"
                style="@style/Base.TextAppearance.AppCompat.Widget.Button"
                android:text="Current Program"
                android:textColor="@color/colorGreenTry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:id="@+id/program_alert"
                android:layout_alignParentLeft="true"
                android:src="@drawable/icon_alert_red_48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/wrapper"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/delete_program"
            android:layout_weight="1"
            android:src="@drawable/ic_cancel_black"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/share_program"
            android:layout_weight="1"
            android:src="@drawable/ic_share_gray_24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>