<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="@color/colorPrimary"
    android:padding="10dp"
    >

    <ImageView
        android:layout_marginRight="60dp"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:id="@+id/program_alert"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_alert_red_48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:textColor="@color/black"
            android:id="@+id/program_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Demise Of The Red Dragon"
            android:textSize="14dp"
             />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/program_date"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="@color/textGrayColor"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_person_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/textGrayColor"

                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/program_creator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="14dp" />

            <ImageView
                android:elevation="10dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/share_program"
                android:src="@drawable/ic_share_gray_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:textColor="@color/textGrayColor"
                android:elevation="10dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/shared_with_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/wrapper"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:padding="10dp"
            android:id="@+id/program_options"
            android:src="@drawable/icon_dots_menu_48px"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

</RelativeLayout>