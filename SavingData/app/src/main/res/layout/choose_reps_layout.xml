<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/strongest_border_bottom_curve_layout"
    android:backgroundTint="@color/colorAccent"
    android:layout_height="match_parent"
    android:padding="6dp">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:text="Single Rep"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <com.strongest.savingdata.MyViews.CreateCustomBeansView.SingleNumberChooseView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.strongest.savingdata.MyViews.CreateCustomBeansView.SingleNumberChooseView>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:text="Range Rep"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <com.strongest.savingdata.MyViews.CreateCustomBeansView.SingleNumberChooseView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.strongest.savingdata.MyViews.CreateCustomBeansView.SingleNumberChooseView>
    </LinearLayout>

</LinearLayout>