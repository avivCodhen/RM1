<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/colorAccent"
    android:elevation="0dp"
    android:orientation="vertical"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/longclick_menu_back"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="11dp"
            android:src="@drawable/back_arrow_24px" />

        <ImageView
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/longclick_menu_more"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/menu_vertical_white_24px_drawable" />

        <ImageView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/longclick_menu_delete"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/longclick_menu_more"
            android:src="@drawable/delete_24dp_white" />

        <ImageView
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:id="@+id/longclick_menu_transfer"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/longclick_menu_delete"
            android:src="@drawable/forward_arrow_24px_white" />

        <Button
            android:id="@+id/longclick_menu_superset"
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/longclick_menu_transfer"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:src="@drawable/ic_delete_black_24dp"
            android:text="+ Superset"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/longclick_menu_set"
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/longclick_menu_superset"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:src="@drawable/ic_delete_black_24dp"
            android:text="+ Set"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/longclick_menu_intraSet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/longclick_menu_set"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:src="@drawable/ic_delete_black_24dp"
            android:text="+ Intraset"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold" />


    </RelativeLayout>
