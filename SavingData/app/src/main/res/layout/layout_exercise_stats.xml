<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:textSize="@dimen/recycler_view_stats_textsize"
                android:text="Total"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:textSize="@dimen/recycler_view_stats_textsize"
                android:text="Sets:"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/exercise_stats_sets"

                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/recycler_view_stats_textsize"
                android:text="12"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <include layout="@layout/layour_side_border"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </include>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:textSize="@dimen/recycler_view_stats_textsize"
                android:text="Total"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:textSize="@dimen/recycler_view_stats_textsize"
                android:text="Reps:"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/exercise_stats_reps"

                android:gravity="center"
                android:textSize="@dimen/recycler_view_stats_textsize"
                android:text="12"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <include layout="@layout/layour_side_border"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </include>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:textSize="@dimen/recycler_view_stats_textsize"
                android:text="Total"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:textSize="@dimen/recycler_view_stats_textsize"
                android:text="Rest:"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/exercise_stats_rest"

                android:gravity="center"
                android:textSize="@dimen/recycler_view_stats_textsize"
                android:text="12"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <include layout="@layout/layour_side_border"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </include>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:textSize="@dimen/recycler_view_stats_textsize"
                android:text="Projected"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:textSize="@dimen/recycler_view_stats_textsize"
                android:text="Volume:"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/exercise_stats_weight"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/recycler_view_stats_textsize"
                android:text="1080kg"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>

    </LinearLayout>

</LinearLayout>