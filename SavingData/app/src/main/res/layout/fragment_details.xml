<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.strongest.savingdata.MyViews.LongClickMenu.LongClickMenuView
        android:id="@+id/fragment_details_longclick"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:alpha="0"
        android:background="@color/colorAccent"
        android:elevation="1dp"
        android:visibility="gone"

        />


    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/activity_exercise_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">


            <android.support.design.widget.CollapsingToolbarLayout

                android:id="@+id/activity_exercise_collapsingtoolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:foregroundGravity="bottom|right"
                android:foregroundTintMode="add"
                app:contentScrim="?attr/colorAccent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">


                <android.support.v7.widget.Toolbar
                    android:id="@+id/exercise_details_activity_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@color/colorAccent"
                    android:elevation="1dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:theme="@style/AppToolbarwhite">

                    <RelativeLayout
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"
                        android:background="@color/colorAccent">


                        <TextView
                            android:id="@+id/textview_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:layout_toLeftOf="@+id/logBtn"
                            android:text="New Exercise"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/logBtn"
                            style="@style/Base.Widget.AppCompat.Button.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_toLeftOf="@+id/toolbar_add_set_btn"
                            android:backgroundTint="@color/orangeColor"
                            android:text="LOG"
                            android:textColor="@color/colorPrimary" />

                        <ImageView

                            android:id="@+id/toolbar_add_set_btn"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:backgroundTint="@color/colorRedTry"
                            android:elevation="10dp"
                            android:padding="10dp"
                            android:src="@drawable/plus_48px"
                            android:text="add set"
                            android:textColor="@color/colorPrimary"
                            app:layout_collapseMode="pin"

                            />


                        <net.cachapa.expandablelayout.ExpandableLayout
                            android:layout_below="@+id/toolbar_add_set_btn"
                            android:id="@+id/youtube_expand_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:el_expanded="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/saveToLogBtn"
                                    style="@style/Base.Widget.AppCompat.Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/orangeColor"
                                    android:text="SAVE TO LOG"
                                    android:textColor="@color/colorPrimary" />

                                <Button
                                    style="@style/Base.Widget.AppCompat.Button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/colorGreenTry"
                                    android:text="SAVE CHANGES"
                                    android:textColor="@color/colorPrimary" />


                            </LinearLayout>


                        </net.cachapa.expandablelayout.ExpandableLayout>


                    </RelativeLayout>


                </android.support.v7.widget.Toolbar>


                <RelativeLayout
                    android:id="@+id/collapse_container"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="67dp"
                    android:background="@color/colorAccent"
                    app:layout_collapseMode="parallax">


                    <RelativeLayout
                        android:id="@+id/statswrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/testIv"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:elevation="10dp"
                            app:layout_behavior="com.strongest.savingdata.Utils.ImageBehavior" />

                        <ImageView
                            android:id="@+id/exercise_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="35dp"
                            android:layout_toRightOf="@+id/testIv"
                            android:src="@drawable/icon_info_48_white" />


                        <include
                            android:id="@+id/stats"
                            layout="@layout/recycler_view_exercise_stats"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="50dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@+id/exercise_info"
                            android:visibility="invisible"
                            app:layout_collapseMode="parallax"></include>


                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/fragment_details_recycler_exercises"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/statswrapper"
                        android:layout_marginTop="-40dp"
                        android:visibility="invisible"></android.support.v7.widget.RecyclerView>


                    <FrameLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fragment_details_recycler_exercises">

                    </FrameLayout>
                </RelativeLayout>


            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <!--

                <android.support.v4.widget.NestedScrollView
                    android:id="@+id/nestedScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    app:behavior_overlapTop="30dp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

        -->


        <android.support.v7.widget.RecyclerView

            android:id="@+id/details_fragment_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/youtube_expand_layout"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"></android.support.v7.widget.RecyclerView>


        <!--    <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:id="@+id/btn_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <android.support.design.widget.FloatingActionButton
                    android:src="@drawable/ic_add_white_24dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/add_set_btn"
                    app:backgroundTint="@color/colorRedTry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />

            </LinearLayout>-->


        <!--

                </android.support.v4.widget.NestedScrollView>
        -->

