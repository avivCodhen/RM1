<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.strongest.savingdata.MyViews.LongClickMenu.LongClickMenuView
        android:id="@+id/fragment_details_longclick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:alpha="0"
        android:background="@color/colorAccent"
        android:elevation="1dp"
        android:visibility="gone"

        />


    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/activity_exercise_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:elevation="10dp">


            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/activity_exercise_collapsingtoolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:foregroundGravity="bottom|right"
                android:foregroundTintMode="add"
                app:contentScrim="?attr/colorAccent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">


                <android.support.v7.widget.Toolbar
                    android:id="@+id/exercise_details_activity_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/colorAccent"
                    android:elevation="1dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:theme="@style/AppToolbarwhite">

                    <RelativeLayout
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"
                        android:background="@color/colorAccent">


                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:id="@+id/textview_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:layout_toLeftOf="@+id/toLog"
                            android:text="New Exercise"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <!-- <Button
                             android:id="@+id/logBtn"
                             style="@style/Base.Widget.AppCompat.Button.Small"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginBottom="5dp"
                             android:layout_marginTop="5dp"
                             android:layout_toLeftOf="@+id/toolbar_add_set_btn"
                             android:backgroundTint="@color/orangeColor"
                             android:text="LOG"
                             android:textColor="@color/colorPrimary" />
 -->
                        <!--<ImageView

                            android:id="@+id/toolbar_add_set_btn"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:backgroundTint="@color/colorRedTry"
                            android:elevation="10dp"
                            android:padding="9dp"
                            android:src="@drawable/plus_48px"
                            android:text="add set"
                            android:textColor="@color/colorPrimary"
                            app:layout_collapseMode="pin"

                            />
-->
                        <Button xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/toLog"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:elevation="10dp"
                            android:padding="8dp"
                            android:src="@drawable/icon_event_note_white_24dp"
                            android:text="Log Data"
                            android:backgroundTint="@color/colorPrimary"
                            android:textColor="@color/colorAccent"
                            android:textAllCaps="false" />


                    </RelativeLayout>


                </android.support.v7.widget.Toolbar>


                <RelativeLayout
                    android:id="@+id/collapse_container"


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="75dp"
                    android:background="@color/colorAccent"
                    app:layout_collapseMode="parallax">


                    <RelativeLayout
                        android:id="@+id/statswrapper"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">


                        <com.strongest.savingdata.MyViews.ExerciseStatsView
                            android:id="@+id/stats"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"></com.strongest.savingdata.MyViews.ExerciseStatsView>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/fragment_details_recycler_exercises"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/stats"
                            android:layout_marginTop="20dp"></android.support.v7.widget.RecyclerView>

                    </RelativeLayout>


                </RelativeLayout>


            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <!--

                <android.support.v4.widget.NestedScrollView
                    android:id="@+id/nestedScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    app:behavior_overlapTop="30dp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

        -->


        <com.strongest.savingdata.MyViews.SmartEmptyView
            android:id="@+id/fragment_exercise_details_smartemptyview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/youtube_expand_layout"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"></com.strongest.savingdata.MyViews.SmartEmptyView>

        <android.support.v7.widget.RecyclerView

            android:id="@+id/details_fragment_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/youtube_expand_layout"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"></android.support.v7.widget.RecyclerView>


        <!--    <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:id="@+id/btn_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <android.support.design.widget.FloatingActionButton
                    android:src="@drawable/ic_add_white_24dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/add_set_btn"
                    app:backgroundTint="@color/colorRedTry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />

            </LinearLayout>-->


        <!--

                </android.support.v4.widget.NestedScrollView>
        -->

        <!--    <android.support.design.widget.FloatingActionButton
                android:id="@+id/play_fav"
                android:layout_margin="15dp"
                app:fabSize="mini"
                android:src="@drawable/ic_add_white_24dp"
                app:backgroundTint="@color/colorRedTry"
                android:layout_width="wrap_content"
                app:layout_anchor="@id/activity_exercise_app_bar"
                app:layout_anchorGravity="bottom|right"
                android:layout_height="wrap_content" />-->


    </android.support.design.widget.CoordinatorLayout>


    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/exercise_detail_expandable_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        app:el_expanded="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/sets_details_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></FrameLayout>

            <FrameLayout
                android:id="@+id/transparent_wrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"></FrameLayout>
        </LinearLayout>

    </net.cachapa.expandablelayout.ExpandableLayout>

    <com.strongest.savingdata.MyViews.MovableFloatingActionButton
        android:id="@+id/exercise_detail_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:src="@drawable/plus_48px"
        app:fabSize="normal" />

</RelativeLayout>